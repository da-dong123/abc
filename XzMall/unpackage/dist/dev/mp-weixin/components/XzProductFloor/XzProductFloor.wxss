.first_product {
  margin: 4px 0px;
  box-shadow: 0px 0px 10rpx 0px #c0c0c0;
  border-top: solid 1px #c8c7cc;
}
.first_product .textheader {
  display: flex;
  align-items: center;
  padding: 8px 8px;
  border-bottom: solid 1px #c8c7cc;
  margin-bottom: 8px;
}
.first_product .textheader .txt {
  flex: 1;
  margin-left: 8px;
}
.first_product .textheader .link {
  color: #999;
  font-size: 14px;
}
.first_productDet {
  display: flex;
  flex-wrap: wrap;
  padding: 8px 8px;
  justify-content: space-between;
}
.first_productDet .first_product1 {
  border: solid #c8c7cc 1px;
  width: 49%;
  box-shadow: 0 0 6px #c8c7cc;
  border-radius: 6px;
  padding: 8px 10px;
  margin-bottom: 10px;
}
.first_productDet .first_product1 .pic {
  height: 200rpx;
  display: block;
  margin: 0 auto;
}
.first_productDet .first_product1 .text_detail {
  margin: 8px 0;
}
.first_productDet .first_product1 .text_detail .txt {
  display: block;
  white-space: nowrap;
  text-overflow: ellipsis;
  font-size: 12px;
  color: #999;
}
.first_productDet .first_product1 .text_detail .text_down {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 5px;
}
.first_productDet .first_product1 .text_detail .text_down .txt {
  font-size: 12px;
  color: #0aa1ed;
  font-weight: bold;
}
.first_productDet .first_product1 .text_detail .text_down .link {
  color: #fff;
  font-size: 12px;
  border-radius: 6px;
  background-color: #007aff;
  padding: 0 10px;
  margin: 0;
}

